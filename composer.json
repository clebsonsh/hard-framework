{
  "name": "clebson/pure-php-oop",
  "type": "project",
  "autoload": {
    "files": [
      "infra/helpers.php"
    ],
    "psr-4": {
      "App\\": "app/",
      "Infra\\": "infra/",
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "php -S localhost:8000 -t public"
    ],
    "format": "vendor/bin/pint",
    "lint": "vendor/bin/phpstan analyze -l 9 app public infra",
    "test": "vendor/bin/pest",
    "ci": [
      "composer format",
      "composer lint",
      "composer test"
    ]
  },
  "authors": [
    {
      "name": "Clebson Moura",
      "email": "clebson.sh@gmail.com"
    }
  ],
  "require-dev": {
    "laravel/pint": "^1.24",
    "phpstan/phpstan": "^2.1",
    "pestphp/pest": "^4.0",
    "mockery/mockery": "^1.6"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
